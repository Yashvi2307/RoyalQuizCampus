<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >

        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="5dip" android:color="#55000000" />
            <gradient android:angle="-270" android:startColor="#CC13E9" android:endColor="#D341EC"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="0dip" android:color="#830C96" />
            <solid android:color="#CD30EB"/>
        </shape>
    </item>
    <item >

        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="5dip" android:color="#5D006F" />
            <gradient android:angle="-270" android:startColor="#E163F7" android:endColor="#E91E63" />
        </shape>
    </item>
</selector>